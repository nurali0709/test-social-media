root = true

# Unix-style line endings
[*]
end_of_line = LF
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# HTML, Python files
[*.{html,py}]
indent_style = space
indent_size = 4
max_line_length = 119

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Exclude directories
[.git]
exclude = *
